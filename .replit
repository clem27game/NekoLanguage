modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["antlr4"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NekoScript"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "neko-script-interpreter"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "tester-syntaxe"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "tester-basique"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "tester-demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "tester-demo-rapide"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "tester-site"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "tester-site-variables"

[[workflows.workflow]]
name = "NekoScript"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install antlr4 sqlite3 && chmod +x bin/neko-script && node src/index.js exécuter examples/hello.neko"
waitForPort = 5000

[[workflows.workflow]]
name = "neko-script-interpreter"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x bin/neko-script && cd examples && node ../bin/neko-script exécuter hello.neko"

[[workflows.workflow]]
name = "tester-syntaxe"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/index.js exécuter examples/syntaxe-correcte.neko"

[[workflows.workflow]]
name = "tester-basique"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/index.js exécuter examples/basic-functions.neko"

[[workflows.workflow]]
name = "tester-demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/index.js exécuter examples/demo-ok.neko"

[[workflows.workflow]]
name = "tester-demo-rapide"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/index.js exécuter examples/demo-rapide.neko"

[[workflows.workflow]]
name = "tester-site"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/index.js exécuter examples/site-example.neko"
waitForPort = 5000

[[workflows.workflow]]
name = "tester-site-variables"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/index.js exécuter examples/site-variables.neko"

[deployment]
run = ["sh", "-c", "npm install antlr4 sqlite3 && chmod +x bin/neko-script && node src/index.js exécuter examples/hello.neko"]

[[ports]]
localPort = 5000
externalPort = 80
